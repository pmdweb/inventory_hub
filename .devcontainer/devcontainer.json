{
  "name": "inventory_hub",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
// This configuration sets up a development environment for the inventory_hub project using Docker Compose.
// It specifies the service to use, the workspace folder, and includes Python-related VS Code extensions